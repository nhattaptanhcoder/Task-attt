#include <stdio.h>
#include <math.h>
#include <stdbool.h>
#include <stdlib.h>
#define max 10000



int convertBinary(int arr[], int k){
	int i = 0;
	while (k > 0){
		arr[i++] = k % 2;
		k = k / 2;
	}
	return i;
}

int mod(int k, int a, int n){
	int arr[max];
	int b = 1;
	int length = convertBinary(arr, k);
	int A = a;
	if (arr[0] == 1){
		b = a;
	}
	for (int i = 1; i < length; i++){
		A = (A * A) % n;
		if (arr[i] == 1){
			b = (A * b) % n;
		}
	}
	return b;
}


bool checkFermat(int t, int n ){
	 
	 int a = 2 + rand() % (n - 3); 
	 
	 for ( int i = 0 ; i < 3 ; i++){
	 	if (mod(n-1,a,n) != 1 ){
	 		return false;
		 }
	 }
	
	
	return true;
}


int main(){
	int n;
	int t;
	printf("Nhap so n le can kiem tra : ");
	scanf("%d",&n);
    printf("Nhap so vong : ");
    scanf("%d",&t);
    if(checkFermat(t,n)){
    	printf("%d la so nguyen to ",n);
	}
	else{
		printf("%d la hop so ",n);
	}
	
	
	return 0;
}
